<?xml version="1.0"?>
 
<PropertyList>

 <fx>
 
 	<jet>
		<name>jet</name>
		<path>Sounds/jet.wav</path>
		<mode>looped</mode>
		<condition>
        <equals>
        <property>engines/engine/running</property>
        <value>1</value>	
        </equals>
		</condition>
		<volume>
        <property>engines/engine[0]/thrust_lb</property>
        <factor type="double">0.00016</factor>
		</volume>
		<pitch>
        <property>engines/engine[0]/n1</property>
        <factor>0.2</factor>
		</pitch>
		<position>
		<x> 5.185 </x>
		<y>  0.0 </y>
		<z>  0.0 </z>
		</position>
		<orientation>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
        <inner-angle>180.0</inner-angle>
        <outer-angle>360.0</outer-angle>
        <outer-gain>0.5</outer-gain>
		</orientation>
	</jet>

  <engine>
   <name>engine</name>
   <mode>looped</mode>
   <path>Sounds/turbine_loop.wav</path>
   <condition>
    <property>/engines/engine[0]/running</property>
    <not>
      <property>/sim/current-view/internal</property>
    </not>
    <not>
	  <property>engines/engine[0]/out-of-fuel</property>
	</not>
   </condition>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-cone>180.0</inner-cone>
    <outer-cone>360.0</outer-cone>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>/controls/engines/engine[0]/throttle</property>
    <factor>0.5</factor>
    <min>0.1</min>
    <max>0.5</max>
   </volume>
  </engine>

  <engine>
   <name>engine_cockpit</name>
   <mode>looped</mode>
   <path>Sounds/jet.wav</path>
   <condition>
    <property>/engines/engine[0]/running</property>
	<equals>
	<property>sim/current-view/name</property>
	<value>Cockpit View</value>
	</equals>
    <not>
      <property>engines/engine[0]/out-of-fuel</property>
    </not>
   </condition>
   <volume>
    <property>/controls/engines/engine[0]/throttle</property>
    <factor>0.2</factor>
    <min>0.05</min>
    <max>0.2</max>
   </volume>
  </engine>

  <engine>
   <name>burner</name>
   <mode>looped</mode>
   <path>Sounds/turbojet_fan.wav</path>
   <condition>
    <property>/engines/engine[0]/augmentation</property>
    <not>
     <property>/sim/current-view/internal</property>
    </not>
    <not>
     <property>engines/engine[0]/out-of-fuel</property>
    </not>
   </condition>
   <orientation>
    <x>0.0</x>
    <y>0.0</y>
    <z>180.0</z>
    <inner-cone>180.0</inner-cone>
    <outer-cone>360.0</outer-cone>
    <outer-gain>0.2</outer-gain>
   </orientation>
   <volume>
    <property>/controls/throttle[0]</property>
    <factor>1</factor>
    <min>0.4</min>
    <max>0.5</max>
   </volume>
  </engine>

  <engine>
   <name>burner-from-cockpit</name>
   <mode>looped</mode>
   <path>Sounds/turbojet_fan.wav</path>
   <condition>
    <property>/engines/engine[0]/augmentation</property>
    <property>/sim/current-view/internal</property>
    <not>
	<property>engines/engine[0]/out-of-fuel</property>
	</not>
   </condition>
   <volume>
    <property>/controls/throttle[0]</property>
    <factor>0.1</factor>
    <min>0.1</min>
    <max>0.1</max>
   </volume>
  </engine>

  <engine>
   <name>compressor whine</name>
   <path>Sounds/turbojet_fan.wav</path>
   <mode>looped</mode>
   <condition>
    <not>
     <property>/sim/current-view/internal</property>
    </not>
    <not>
     <property>engines/engine[0]/out-of-fuel</property>
    </not>
    <property>/engines/engine[0]/running</property>
   </condition>
   <orientation>
    <x> 0.0</x>
    <y> 0.0</y>
    <z> 180.0</z>
    <inner-cone>50.0</inner-cone>
    <outer-cone>180.0</outer-cone>
    <outer-gain>0.5</outer-gain>
   </orientation>
   <pitch>
    <property>/engines/engine[0]/n1</property>
    <offset>0.7</offset>
    <factor>.003</factor>
   </pitch>
   <volume>
    <property>/engines/engine[0]/n1</property>
    <offset>0.15</offset>
    <factor>-0.003</factor>
    <min>0.05</min>
    <max>0.15</max>
   </volume>
  </engine>

  <tire-rumble>
   <name>tire-rumble</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
     <property>/sim/current-view/internal</property>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.004</factor>
    <max>0.3</max>
   </volume>
  </tire-rumble>

  <gear-wind>
   <name>gear-wind</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
     <property>/sim/current-view/internal</property>
     <greater-than>
      <property>/gear/gear[1]/position-norm[0]</property>
      <value>0.01</value>
     </greater-than>
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.002</factor>
    <max>1.0</max>
   </volume>
  </gear-wind>

  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>1.2</offset>
   </pitch>
  </squeal>

    <air-brakes>
      <name>air-brakes</name>
      <mode>in-transit</mode>
      <path>Sounds/flaps.wav</path>
      <property>surface-positions/speedbrake-pos-norm</property>
      <volume>
        <factor>0.25</factor>
      </volume>
    </air-brakes>

   <mixture>
      <name>thrust</name>
      <mode>in-transit</mode>
      <path>Sounds/gear.wav</path>
      <property>/controls/engines/engine/mixture</property>
      <pitch>
        <internal>dt_play</internal>
        <offset>1.0</offset>
        <factor>-0.04</factor>
      </pitch>
    </mixture>

   <canopy>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Sounds/gear.wav</path>
      <property>/canopy/position-norm</property>
      <pitch>
        <internal>dt_play</internal>
        <offset>1.0</offset>
        <factor>-0.04</factor>
      </pitch>
    </canopy>
  
   <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Sounds/gear.wav</path>
      <property>/gear/gear[0]/position-norm</property>
      <pitch>
        <internal>dt_play</internal>
        <offset>1.0</offset>
        <factor>-0.04</factor>
      </pitch>
    </gear>
  
     <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Sounds/flaps.wav</path>
      <property>/surface-positions/flap-pos-norm</property>
      <volume>
      <offset>0.25</offset>
      </volume>
    </flap>
  
  <guns>
   <name>gunfire</name>
   <mode>looped</mode>
   <condition>
    <property>controls/armament/trigger</property>
   </condition>
   <path>Sounds/gatling.wav</path>
  </guns>

</fx>
 
</PropertyList>
