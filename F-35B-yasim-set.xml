<?xml version="1.0"?>

<PropertyList>

 <sim>

  <description>Lockheed Martin F-35B Lightning II</description>
  <author>Petar Jedvaj (3D), Detlef Faber (FDM)</author>
  <status>development</status>
  <rating>
    <FDM type="int">2</FDM>
    <systems type="int">1</systems>
    <cockpit type="int">0</cockpit>
    <model type="int">3</model>
  </rating>

  <startup>
   <splash-texture>Aircraft/F-35B/Splash.png</splash-texture>
  </startup>
  
  <flight-model>yasim</flight-model>
  <aero>F-35B-yasim</aero>
  <fuel-fraction>1.0</fuel-fraction>

  <systems>
   <electrical>
    <path>Aircraft/Generic/generic-electrical.xml</path>
   </electrical>
  </systems> 
 
  <virtual-cockpit archive="y">true</virtual-cockpit>
  <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>

  <model>
   <path>Aircraft/F-35B/Models/F-35B.xml</path>
  </model>

  <submodels> 
    <serviceable type="bool">true</serviceable>
    <path>Aircraft/F-35B/Submodels.xml</path>
  </submodels>

  <sound>
    <path>Aircraft/F-35B/Sounds/Sound.xml</path>
  </sound>

  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <x-offset-m archive="y" type="double"> 0.00</x-offset-m>
    <y-offset-m archive="y" type="double"> 1.15</y-offset-m>
    <z-offset-m archive="y" type="double">-4.70</z-offset-m>
    <pitch-offset-deg>-7.5</pitch-offset-deg>
   </config>
  </view>

  <view n="1">
   <config>
    <target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
   </config>
  </view>

  <view n="2">
   <config>
    <target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
   </config>
  </view>

  <view n="3">
   <config>
    <target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
   </config>
  </view>

  <view n="4">
   <config>
    <target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
   </config>
  </view>
  <view n="5">
   <config>
    <target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
   </config>
  </view>
  <view n="6">
   <config>
    <target-z-offset-m archive="y" type="double">0.0</target-z-offset-m>
   </config>
  </view>

 <autopilot>
   <config>
     <min-climb-speed-kt type="float">70.0</min-climb-speed-kt>
     <best-climb-speed-kt type="float">75.0</best-climb-speed-kt>
     <target-climb-rate-fpm type="float">500.0</target-climb-rate-fpm>
     <target-descent-rate-fpm type="float">1000.0</target-descent-rate-fpm>
     <elevator-adj-factor type="float">4000.0</elevator-adj-factor>
     <integral-contribution type="float">0.01</integral-contribution>
     <zero-pitch-throttle type="float">0.45</zero-pitch-throttle>
     <zero-pitch-trim-full-throttle type="float">0.14</zero-pitch-trim-full-throttle>
   </config>
 </autopilot>

  <hud>
   <enable3d>false</enable3d>
  </hud>  

		<weight n="0">
			<name>Station 1 </name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="1">
			<name>Station 2 </name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="2">
			<name>Station 3 </name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="3">
			<name>Station 4 </name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="4">
			<name>Station 5 </name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="5">
			<name>Station 6 </name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="6">
			<name>Station 7 </name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="7">
			<name>Station 8 </name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="8">
			<name>Station 9 </name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="9">
			<name>Station 10</name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>
		<weight n="10">
			<name>Station 11</name>
			<weight-lb type="float">0</weight-lb>
			<selected>none</selected>
			<opt><name>none</name><lbs>0</lbs></opt>
		</weight>

	<help>
  	<title>Lockheed Martin F-35B LIghtning II</title>
		<key>
		<name>m/M</name>
		<desc>Thrust Vector</desc>
      		</key>
		<key>
		<name>c</name>
		<desc>Canopy</desc>
		</key>
   		<key>
    		<name>e</name>
    		<desc>Gun</desc>
   		</key>
		<key>
		<name>n/N</name>
		<desc>Speedbrakes</desc>
		</key>
		<line>SVTOL</line>
	</help>
	
	<menubar>
		<default>
		<menu n="100">
		<label>Lockheed Martin F-35B Lightning II</label>
		<enabled type="bool">true</enabled>
		<item>
		<label>Select Livery</label>
		<binding>
		<command>nasal</command>
		<script>aircraft.livery.dialog.toggle()</script>
		</binding>
		</item>
		</menu>
		</default>
	</menubar>

 </sim>

 <engines>
  <engine>
   <rpm type="double">700</rpm>
  </engine>
 </engines>

 <!-- set prop for the manual "bookmark" arrow on the remote compas -->
 <instrumentation>
    <magnetic-compass>
       <bookmark-heading-deg type="double">43.0</bookmark-heading-deg>
    </magnetic-compass>
    <radar>
      <range type="int" archive="y">40</range>
      <range-factor type="double" archive="n">0.001888</range-factor>
      <minimized type="bool" archive="y">false</minimized>
      <selected type="int">3</selected>
    </radar>
 </instrumentation>

 <!-- set up control properties for YASim -->
 <controls>
   <engines>
      <engine n="0">
        <magnetos>3</magnetos>
        <boost type="double">0.0</boost>
		<throttle type="float">0.001</throttle>
      </engine>
   </engines>
   <gear>
      <tailwheel-lock>false</tailwheel-lock>
	<brake-parking>1</brake-parking>
   </gear>
   <flight><fan type="double">0</fan></flight>
 </controls>

 <canopy>
    <canopy-pos-norm type="float">1.0</canopy-pos-norm>
 </canopy>

 <yasim>
   <weights>
     <pilot-lb>210</pilot-lb>
   </weights>
 </yasim>

 <!-- Map Keys -->
 <input>
     <keyboard>

 <!-- map keys for launch-bar -->
      <key n="99">
        <name>c</name>
        <desc>Open/close canopy</desc>
        <binding>
          <command>nasal</command>
          <script>f35.canopy_switch(2)</script>
        </binding>
      </key>
      <key n="78"> 
        <name>N</name>
        <desc>Extend Speedbrakes</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/flight/speedbrake</property>
          <step type="double">0.2</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>
      <key n="110"> 
        <name>n</name>
        <desc>Retract Speedbrakes</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/flight/speedbrake</property>
          <step type="double">-0.2</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>

    <key n="101">
     <name>e</name>
     <desc>Gun</desc> 
     <binding>
      <command>property-assign</command>
      <property>controls/armament/trigger</property>
      <value>true</value>
     </binding>
     <mod-up>
      <binding>
       <command>property-assign</command>
       <property>controls/armament/trigger</property>
       <value>false</value>
      </binding> 
     </mod-up>
    </key>

     </keyboard>
 </input>

 <limits>
  <max-positive-g>9</max-positive-g>
  <max-negative-g>-3</max-negative-g>
 </limits>

<surface-positions>
<nozzle-yaw type="double">0</nozzle-yaw>
</surface-positions>

  <nasal>
    <f35>
      <file>Aircraft/F-35B/Nasal/fan-yasim.nas</file>
      <file>Aircraft/F-35B/Nasal/f35.nas</file>
      <file>Aircraft/Generic/limits.nas</file>
      <file>Aircraft/F-35B/Nasal/liveries.nas</file>
      <file>Aircraft/F-35B/Nasal/hud.nas</file>
    </f35>
  </nasal>

</PropertyList>